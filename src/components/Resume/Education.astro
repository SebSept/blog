---
export interface Props {
  education: {
    institution: string;
    area: string;
    studyType: string;
    startDate: string;
    endDate: string;
  }[];
}

const { education } = Astro.props;
---

<div class="mb-8">
  <h2 class="text-2xl font-bold mb-4">Formation</h2>
  {education.map(edu => (
    <div class="mb-4">
      <h3 class="text-xl">{edu.studyType}</h3>
      {edu.area && <p>{edu.area}</p>}
      <p class="text-sm">{edu.startDate} - {edu.endDate}</p>
    </div>
  ))}
</div>

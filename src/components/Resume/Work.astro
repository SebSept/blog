---
export interface Props {
  work: {
    name: string;
    position: string;
    startDate: string;
    endDate: string;
    highlights?: string[];
  }[];
}

const { work } = Astro.props;
---

<div class="mb-8">
  <h2 class="text-2xl font-bold mb-4">Exp√©rience professionnelle</h2>
  {work.map(job => (
    <div class="mb-6">
      <h3 class="text-xl font-semibold">{job.position}</h3>
      <p class="italic">{job.name}</p>
      <p class="text-sm">{job.startDate} - {job.endDate}</p>
      {job.highlights && (
        <ul class="list-disc ml-4 mt-2">
          {job.highlights.map(highlight => (
            <li>{highlight}</li>
          ))}
        </ul>
      )}
    </div>
  ))}
</div>
